<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        mc:Ignorable="d"
           Title="Revit Advanced Selection Tool" Height="570" Width="800"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" ResizeMode="NoResize">

    <Grid>
        <ListView ItemsSource="{Binding Categories}" SelectionChanged="Categories_SelectionChanged" Name="lView" Height="280" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,40,0,0" FontSize="16" Background="AliceBlue" FontFamily="ISOCPEUR">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Категории" DisplayMemberBinding="{Binding Name}" Width="180"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Command="{Binding LoadCategoriesCommand}" Content="Загрузить категории" HorizontalAlignment="Left" Margin="35,325,0,0" VerticalAlignment="Top" Height="30" Width="130" FontSize="14" Background="AliceBlue" FontFamily="ISOCPEUR"/>
        <Button Command="{Binding ApplyCategoriesCommand}" Content="Применить" HorizontalAlignment="Left" Margin="35,360,0,0" VerticalAlignment="Top" Height="30" Width="130" FontSize="16" Background="AliceBlue" FontFamily="ISOCPEUR"/>
        <Button Content="Выбрать все" Click="SelectAllCategories" HorizontalAlignment="Left" Margin="35,395,0,0" VerticalAlignment="Top" Height="30" Width="130" FontSize="16" Background="AliceBlue" FontFamily="ISOCPEUR"/>
        <Button Content="Снять выбор" Click="CancelSelection" HorizontalAlignment="Left" Margin="35,430,0,0" VerticalAlignment="Top" Height="30" Width="130" FontSize="16" Background="AliceBlue" FontFamily="ISOCPEUR"/>

        <Label Content="Категории" Margin="60,35,600,440" FontWeight="Medium" FontSize="16" FontStyle="Italic" FontFamily="ISOCPEUR"/>
        <Label Content="{Binding StatusMessage}" HorizontalAlignment="Left" Margin="0,465,0,0" VerticalAlignment="Top" Width="200" FontSize="12"/>

        <Label Content="Конструктор правил" HorizontalAlignment="Left" Margin="432,14,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Medium" FontStyle="Oblique" FontFamily="ISOCPEUR"/>
        <Grid Name="grid" Margin="225,45,10,89" Background="AliceBlue" Height="370">
            <Image Name="imageGood" Source="images/good.jpg" Visibility="Visible"/>
            <Image Name="imageBad" Source="/Wpf;component/images/bad.jpg" Visibility="Hidden"/>
        </Grid>

        <Button Content="Добавить правило" HorizontalAlignment="Left" Margin="594,450,0,0" VerticalAlignment="Top" Height="31" Width="151" FontFamily="ISOCPEUR" FontSize="16" Click="Add_Rule"/>
        <Button Command="{Binding SearchCommand}" Content="Найти и выбрать" HorizontalAlignment="Left" Margin="237,450,0,0" VerticalAlignment="Top" Width="155" Height="31" FontFamily="ISOCPEUR" FontSize="16"/>
        <Button Command="{Binding InvertSelectionCommand}" Content="Инвертировать выбор" HorizontalAlignment="Left" Margin="415,450,0,0" VerticalAlignment="Top" Width="155" Height="31" FontFamily="ISOCPEUR" FontSize="16"/>
    </Grid>
</Window>
