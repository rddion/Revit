<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        mc:Ignorable="d"
           Title="Revit Advanced Selection Tool" Height="570" Width="800"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
    
    <Grid>
        <ListView  Name="lView" Height="280" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,40,0,0" FontSize="16" Background="AliceBlue" SelectionChanged="lView_SelectionChanged" FontFamily="ISOCPEUR">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="500"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="apply" ToolTip="Начать поиск по выбранным категориям" Content="Применить" HorizontalAlignment="Left" Margin="35,350,0,0" VerticalAlignment="Top" Height="30" Width="130" Click="Button_Click" FontSize="16" Background="AliceBlue" FontFamily="ISOCPEUR"/>
        <Button Content="Выбрать все" HorizontalAlignment="Left" Margin="35,385,0,0" VerticalAlignment="Top" Height="30" Width="130" FontSize="16" Background="AliceBlue" Click="Button_Click_1" FontFamily="ISOCPEUR"/>
        <Button Content="Снять выбор" HorizontalAlignment="Left" Margin="35,420,0,0" VerticalAlignment="Top" Height="30" Width="130" FontSize="16" Background="AliceBlue" Click="Button_Click_2" FontFamily="ISOCPEUR"/>
        <Button ToolTip="Очистить список выбранных категорий и показать первоначальный список" Content="Обновить список" HorizontalAlignment="Left" Margin="35,455,0,0" VerticalAlignment="Top" Height="30" Width="130" FontSize="16" Background="AliceBlue" Click="Button_Click_3" FontFamily="ISOCPEUR"/>
        <TextBox Name="search" HorizontalAlignment="Left" Margin="1,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" Height="30" FontSize="12" ToolTip="Поиск по категориям" TextChanged="Text_changed"/>
        <Label Content="Конструктор правил" HorizontalAlignment="Left" Margin="432,14,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Medium" FontStyle="Oblique" FontFamily="ISOCPEUR"/>
        <Grid Name="grid" Margin="225,45,10,89" Background="AliceBlue" Height="370">
            <Image Source="D:\Revit Advanced Selection Tool\Wpf\bin\Debug\images\image.jpg" Visibility="Hidden"/>
            <Image Name="imageGood" Source="D:\Revit Advanced Selection Tool\Wpf\bin\Debug\images\good.jpg" Visibility="Visible"/>
            <Image Name="imageBad" Source="D:\Revit Advanced Selection Tool\Wpf\bin\Debug\images\bad.jpg" Visibility="Visible"/>

        </Grid>
        <Button Name="addRule" Content="Добавить правило" HorizontalAlignment="Left" Margin="594,450,0,0" VerticalAlignment="Top" Height="31" Width="151" Click="Button_Click_5" FontFamily="ISOCPEUR" FontSize="16"/>
        <Button Content="Найти и выбрать" HorizontalAlignment="Left" Margin="237,450,0,0" VerticalAlignment="Top" Width="155" Height="31" Click="Click_Search" FontFamily="ISOCPEUR" FontSize="16"/>
        <Button Name="button_invert" Content="Инвертировать выбор" HorizontalAlignment="Left" Margin="415,450,0,0" VerticalAlignment="Top" Width="155" Height="31" Click="Button_Click_6" FontFamily="ISOCPEUR" FontSize="16"/>
        <Label Content="Категории" Margin="60,35,600,440" FontWeight="Medium" FontSize="16" FontStyle="Italic" FontFamily="ISOCPEUR"/>
        <Label Name="selCat" Content="" HorizontalAlignment="Left" Margin="0,319,0,0" VerticalAlignment="Top" Width="200"/>



    </Grid>
</Window>
